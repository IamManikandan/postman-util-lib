{
  "name": "script-utils",
  "version": "1.1.0",
  "description": "",
  "main": "lib.js",
  "scripts": {
    "test": "nyc --reporter=lcov --reporter=text npm run test:lint",
    "test:lint": "standard 'src/*.js' && npm run test:unit",
    "test:unit": "mocha test/lib-test.js",
    "test:e2e": "node e2e-test/e2e.js",
    "build": "browserify -p tinyify src/lib.js > docs/dist/bundle.js -s pmlib",
    "dev": "npm run build && node index.js"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "jsrsasign": "^8.0.20",
    "nanoid": "^2.1.7"
  },
  "devDependencies": {
    "@commitlint/cli": "^10.0.0",
    "@commitlint/config-conventional": "^10.0.0",
    "browserify": "^16.5.0",
    "husky": "^3.1.0",
    "jsonwebtoken": "^8.5.1",
    "jwk-to-pem": "^2.0.2",
    "mocha": "^8.1.1",
    "newman": "^5.1.2",
    "nyc": "^14.1.1",
    "sinon": "^7.5.0",
    "standard": "^14.3.1",
    "supertest": "^4.0.2",
    "tinyify": "^2.5.2"
  },
  "nyc": {
    "all": true,
    "include": [
      "src/**/*.js",
      "test/**/*.js"
    ],
    "exclude": [],
    "reporter": [
      "html",
      "text"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-push": "npm test"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
